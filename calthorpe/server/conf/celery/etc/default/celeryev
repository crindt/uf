# Where the Django project is.
CELERYD_CHDIR="/srv/calthorpe/urbanfootprint/calthorpe/server/calthorpe"

CELERYEV_LOG_DIR="/var/log/celery"

# Name of the projects settings module.
export DJANGO_SETTINGS_MODULE="settings"

ENV_PYTHON="/srv/calthorpe_env/bin/python"

VIRTUAL_ENV="/srv/calthorpe_env"

# Path to celeryd
CELERYEV="$ENV_PYTHON /srv/calthorpe/urbanfootprint/calthorpe/server/calthorpe/manage.py"

# Extra arguments to manage.py
CELERYEV_OPTS="celeryev"

# Camera class to use (required)
CELERYEV_CAM="djcelery.snapshot.Camera"

CELERYEV_USER="calthorpe"

CELERYEV_GROUP="www-data"
